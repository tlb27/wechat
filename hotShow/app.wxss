/**app.wxss**/
/* 全局通用样式 */
/* 功能一：通用箭头样式 */
.arrow{
  display: flex;
  justify-content: space-between;
  align-items:center;
}
.arrow::after{
  content: "";
  width: 15rpx;
  height:15rpx;
  border-top:3rpx solid #ccc;
  border-right:3rpx solid #ccc;
  transform:rotate(45deg);
}
/* 功能二  通用分割块*/
.divider{
  height: 20rpx;
  background-color:#ddd;
}

/* 功能三 */
.cell{
  background-color: #fff;
  font-size: 16px;
}

.cell-item{
  border-bottom: 1rpx solid #ddd;
  padding: 20rpx 30rpx;
}
/* 功能四：通用单行超出范围截取并添加省略号 */

.ell{
  overflow: hidden;/*超出范围隐藏*/
  white-space: nowrap;/*不能换行*/
  text-overflow:ellipsis;/*超出部分添加...*/
}